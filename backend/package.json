{
  "name": "hrd-backend",
  "version": "1.0.0",
  "description": "Home Run Derby 2.0 Backend API",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "migrate:v2:sql": "tsx src/scripts/runMigration.ts",
    "migrate:v2:data": "tsx src/scripts/importPlayers.ts",
    "seed:players": "tsx src/scripts/seedPlayers.ts",
    "import:players": "tsx src/scripts/importPlayers.ts",
    "import:2025": "tsx src/scripts/import2025Season.ts",
    "test:phase3": "tsx src/scripts/testPhase3.ts",
    "seed:test": "tsx src/scripts/seedTestData.ts",
    "seed:sample-team": "tsx src/scripts/seedSampleTeam.ts",
    "seed:monthly": "tsx src/scripts/seedMonthlyLeaderboard.ts",
    "import:season": "python src/scripts/python/import_season_stats.py",
    "update:stats:python": "python src/scripts/python/update_stats.py",
    "update:stats:install": "python -m pip install -r src/scripts/python/requirements.txt",
    "job:stats": "tsx src/scripts/runStatsJob.ts",
    "job:stats:date": "tsx src/scripts/runStatsJob.ts --date",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mlb",
    "fantasy",
    "sports",
    "pool"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@supabase/supabase-js": "^2.89.0",
    "axios": "^1.7.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.12.0",
    "cheerio": "^1.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "resend": "^3.5.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.0",
    "msw": "^2.12.7",
    "prettier": "^3.3.0",
    "prisma": "^7.3.0",
    "supertest": "^7.2.2",
    "tsx": "^4.16.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
